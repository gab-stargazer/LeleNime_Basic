<?xml version="1.0" encoding="utf-8"?>
<resources>
    <!-- Base application theme. -->
    <style name="Theme.LeleNimeXML" parent="Theme.Material3.DayNight">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/light_primary</item>
        <item name="colorPrimaryVariant">@color/purple_700</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <!-- Customize your theme here. -->
        <item name="backgroundColor">@color/dark_background</item>
        <item name="itemIconTint">?android:attr/textColorPrimary</item>
        <item name="colorOnSecondaryContainer">@color/white</item>
        <item name="colorOnSurfaceVariant">#D8D8D8</item>
        <item name="cardBackgroundColor">?attr/colorPrimary</item>
        <item name="indicatorColor">@color/navy</item>
        <item name="iconTint">?android:attr/textColorPrimary</item>
        <item name="android:windowContentTransitions">true</item>
        <item name="colorSurface">?attr/colorPrimary</item>
        <item name="colorOnSurface">@color/white</item>
        <item name="colorSecondaryContainer">?attr/colorPrimary</item>
    </style>

    <style name="Theme.LeleNimeXML.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="Theme.LeleNimeXML.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="Theme.LeleNimeXML.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />
</resources>