<resources>
    <!-- Base application theme. -->
    <style name="Theme.LeleNimeXML" parent="Theme.Material3.DayNight">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/light_primary</item>
        <item name="colorPrimaryVariant">@color/purple_700</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Status bar color. -->
        <!-- Customize your theme here. -->
        <item name="backgroundColor">@color/light_background</item>
        <item name="itemIconTint">?android:attr/textColorPrimary</item>
        <item name="cardBackgroundColor">@color/white</item>
        <item name="indicatorColor">@color/navy</item>
        <item name="iconTint">?android:attr/textColorPrimary</item>
        <item name="android:windowContentTransitions">true</item>
        <item name="colorSurface">?attr/colorPrimary</item>
        <item name="colorOnSurface">@color/white</item>


        <item name="colorSecondaryContainer">@android:color/transparent</item>
        <item name="colorOnSecondaryContainer">?attr/colorPrimary</item>
        <item name="colorOnSurfaceVariant">?android:attr/textColorSecondary</item>


        <!--Text Color-->
        <item name="android:textColorPrimary">@color/black</item>
        <item name="android:textColorSecondary">@color/disable_text_color</item>
    </style>

    <style name="Theme.LeleNimeXML.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="Theme.LeleNimeXML.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="Theme.LeleNimeXML.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />
</resources>